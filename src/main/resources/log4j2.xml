<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{YYYY-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
		<RollingFile name="LogFile" fileName="logs/ChEBI_Update-${date:MM-dd-yyyy_HH.mm.ss}.log" filePattern="logs/ChEBI_Update-%d{MM-dd-yyyy_HH.mm.ss}.log">
			<PatternLayout>
				<Pattern>%msg%n</Pattern>
			</PatternLayout>
				<Policies>
					<OnStartupTriggeringPolicy />
				</Policies>
		</RollingFile>
		<RollingFile name="MoleculeNameChanges" fileName="logs/ChEBI_Update_MoleculeNameChanges-${date:MM-dd-yyyy_HH.mm.ss}.tsv" filePattern="logs/ChEBI_Update_MoleculeNameChanges-%d{MM-dd-yyyy_HH.mm.ss}.tsv">
			<PatternLayout>
				<Pattern>%msg%n</Pattern>
			</PatternLayout>
				<Policies>
					<OnStartupTriggeringPolicy />
				</Policies>
		</RollingFile>
		<RollingFile name="MoleculeIdentifierChanges" fileName="logs/ChEBI_Update_MoleculeIdentifierChanges-${date:MM-dd-yyyy_HH.mm.ss}.tsv" filePattern="logs/ChEBI_Update_MoleculeIdentifierChanges-%d{MM-dd-yyyy_HH.mm.ss}.tsv">
			<PatternLayout>
				<Pattern>%msg%n</Pattern>
			</PatternLayout>
				<Policies>
					<OnStartupTriggeringPolicy />
				</Policies>
		</RollingFile>
		<RollingFile name="ReferenceEntityChanges" fileName="logs/ChEBI_Update_ReferenceEntityNameUpdates-${date:MM-dd-yyyy_HH.mm.ss}.tsv" filePattern="logs/ChEBI_Update_ReferenceEntityNameUpdates-%d{MM-dd-yyyy_HH.mm.ss}.tsv">
			<PatternLayout>
				<Pattern>%msg%n</Pattern>
			</PatternLayout>
				<Policies>
					<OnStartupTriggeringPolicy />
				</Policies>
		</RollingFile>
		<RollingFile name="DuplicateMolecules" fileName="logs/ChEBI_Update_DuplicateMoleculeIdentifiers-${date:MM-dd-yyyy_HH.mm.ss}.tsv" filePattern="logs/ChEBI_Update_DuplicateMoleculeIdentifiers-%d{MM-dd-yyyy_HH.mm.ss}.tsv">
			<PatternLayout>
				<Pattern>%msg%n</Pattern>
			</PatternLayout>
				<Policies>
					<OnStartupTriggeringPolicy />
				</Policies>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Root level="debug">
			<AppenderRef ref="Console" level="debug"/>
			<AppenderRef ref="LogFile" level="info"/>
		</Root>
		<Logger name="molNameChangeLog" level="info" additivity="false">
			<AppenderRef ref="MoleculeNameChanges"/>
		</Logger>
		<Logger name="molIdentChangeLog" level="info" additivity="false">
			<AppenderRef ref="MoleculeIdentifierChanges"/>
		</Logger>
		<Logger name="refEntChangeLog" level="info" additivity="false">
			<AppenderRef ref="ReferenceEntityChanges"/>
		</Logger>
		<Logger name="duplicatesLog" level="info" additivity="false">
			<AppenderRef ref="DuplicateMolecules"/>
		</Logger>
	</Loggers>
</Configuration>